<h1>New Product</h1>
<form action="<%= products_create_path%>" class="form-horizontal" method="post" role="form">
  <div class="form-group">
    <label class="col-sm-2 control-label" for="">
      Select Product:
    </label>
    <div class="col-sm-6">
      <% PRODUCT_TYPE.each do |product| %>
        <label class="radio-inline">
          <input id="<%= product.downcase %>" name="productType" type="radio" value="<%= product %>" >
            <%= product.capitalize %>
          </input>
        </label>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button class="btn btn-primary" id="register" type="submit">
        Add Product
      </button>
    </div>
  </div>
</form>